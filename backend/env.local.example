# Local Development Environment Configuration
# Use this when running backend locally (outside Docker) with Docker databases
# Copy to .env.local and customize for your local development setup

# Environment
ENVIRONMENT=development
DEBUG=true
DEV_MODE=true
LOG_LEVEL=DEBUG

# Database URLs - For local backend with Docker databases
NEO4J_URI=bolt://localhost:7687
DATABASE_URL=postgresql+asyncpg://repolens:password@localhost:5433/vectordb
REDIS_URL=redis://localhost:6379

# Database Configuration
NEO4J_USER=neo4j
NEO4J_PASSWORD=password
POSTGRES_DB=vectordb
POSTGRES_USER=repolens
POSTGRES_PASSWORD=password

# Port Configuration
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
POSTGRES_PORT=5433
REDIS_PORT=6379
BACKEND_PORT=8000

# CORS Configuration - Local Development
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001", "http://localhost:3002", "http://127.0.0.1:3000", "http://127.0.0.1:3001"]

# Application Configuration
APP_NAME=RepoLens API (Local Dev)
APP_VERSION=2.0.0-dev
FRONTEND_URL=http://localhost:3000

# Security Configuration (Development - use strong keys in production)
JWT_SECRET_KEY=dev-secret-key-change-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=60

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1
AI_ANALYSIS_ENABLED=true
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.1

# AWS S3 Configuration (Development)
S3_BUCKET=repolens-dev
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# OAuth Configuration (Development)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Rate Limiting (Development - more permissive)
RATE_LIMIT_REQUESTS=1000
RATE_LIMIT_WINDOW=60

# File Processing
MAX_FILE_SIZE=10485760

# Neo4j Memory Settings (Development)
NEO4J_HEAP_INITIAL=256m
NEO4J_HEAP_MAX=1G
NEO4J_PAGECACHE=512m

# Redis Settings (Development)
REDIS_MAX_MEMORY=128mb
