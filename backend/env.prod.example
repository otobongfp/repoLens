# Production Environment Configuration
# Copy to .env.prod and customize for your production setup

# Environment
ENVIRONMENT=production
DEBUG=false
DEV_MODE=false
LOG_LEVEL=INFO

# Database URLs - Use external services in production
NEO4J_URI=bolt://your-neo4j-host:7687
DATABASE_URL=postgresql+asyncpg://user:pass@your-postgres-host:5432/vectordb
REDIS_URL=redis://your-redis-host:6379

# Database Configuration
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_strong_neo4j_password
POSTGRES_DB=vectordb
POSTGRES_USER=repolens
POSTGRES_PASSWORD=your_strong_postgres_password

# Port Configuration (Production - no external ports)
NEO4J_HTTP_PORT=7474
NEO4J_BOLT_PORT=7687
POSTGRES_PORT=5432
REDIS_PORT=6379
BACKEND_PORT=8000

# CORS Configuration - Production (restrict to your domains)
CORS_ORIGINS=["https://repolens.org", "https://www.repolens.org", "https://app.repolens.org"]

# Application Configuration
APP_NAME=RepoLens API
APP_VERSION=2.0.0
FRONTEND_URL=https://app.repolens.org

# Security Configuration (Production - use strong keys)
JWT_SECRET_KEY=your_very_strong_jwt_secret_key_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=15

# AI Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1
AI_ANALYSIS_ENABLED=true
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.1

# AWS S3 Configuration (Production)
S3_BUCKET=repolens-prod
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# OAuth Configuration (Production)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Rate Limiting (Production)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# File Processing
MAX_FILE_SIZE=10485760

# Neo4j Memory Settings (Production)
NEO4J_HEAP_INITIAL=1G
NEO4J_HEAP_MAX=4G
NEO4J_PAGECACHE=2G

# Redis Settings (Production)
REDIS_MAX_MEMORY=512mb
