# RepoLens Backend Environment Configuration
# Copy this file to .env and update the values for your environment

# =============================================================================
# REQUIRED: OpenAI Configuration (Required for AI features)
# =============================================================================
OPENAI_API_KEY="sk-proj....."
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=4000
OPENAI_TEMPERATURE=0.1

# =============================================================================
# REQUIRED: AI Analysis Configuration
# =============================================================================
AI_ANALYSIS_ENABLED=true
AI_MAX_TOKENS=4000
AI_TEMPERATURE=0.1

# =============================================================================
# REQUIRED: Neo4j Database Configuration (Required for graph database)
# =============================================================================
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=password

# =============================================================================
# REQUIRED: Database Configuration (Required for SQLAlchemy)
# =============================================================================
DATABASE_URL=postgresql+asyncpg://repolens:password@localhost:5432/repolens

# =============================================================================
# REQUIRED: AWS S3 Configuration (Required for file storage)
# =============================================================================
S3_BUCKET=repolens
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_REGION=us-east-1

# =============================================================================
# REQUIRED: Security Configuration (Required for authentication)
# =============================================================================
JWT_SECRET_KEY=your_jwt_secret_key_here_change_in_production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# =============================================================================
# REQUIRED: OAuth Configuration (Required for Google/GitHub login)
# =============================================================================
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# =============================================================================
# REQUIRED: Frontend URL (Required for OAuth redirects)
# =============================================================================
FRONTEND_URL=http://localhost:3000

# =============================================================================
# OPTIONAL: Application Configuration
# =============================================================================
APP_NAME="RepoLens API"
APP_VERSION="2.0.0"
DEBUG=false
ENVIRONMENT=development
LOG_LEVEL=INFO

# =============================================================================
# OPTIONAL: Redis Configuration (Optional - for caching)
# =============================================================================
REDIS_URL=redis://localhost:6379

# =============================================================================
# OPTIONAL: CORS Configuration
# =============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://localhost:3001"]

# =============================================================================
# OPTIONAL: Rate Limiting Configuration
# =============================================================================
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# =============================================================================
# OPTIONAL: File Processing Configuration
# =============================================================================
MAX_FILE_SIZE=10485760  # 10MB in bytes

# =============================================================================
# OPTIONAL: Development/Testing Configuration
# =============================================================================
DEV_MODE=false

# Test database URLs (for testing)
TEST_NEO4J_URI=bolt://localhost:7687
TEST_PGVECTOR_DB_URL=postgresql://user:password@localhost:5432/test_vectordb